{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dependencies Inventory",
  "type": "object",
  "properties": {
    "nuget": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": [
              "string",
              "null"
            ]
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "frontend": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "library": {
            "type": "string"
          },
          "version": {
            "type": [
              "string",
              "null"
            ]
          },
          "locations": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "library"
        ]
      }
    },
    "customDlls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "usage": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "name",
          "path"
        ]
      }
    }
  }
}
