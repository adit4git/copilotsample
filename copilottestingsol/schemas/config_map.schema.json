{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config Map",
  "type": "object",
  "properties": {
    "appSettings": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "connectionStrings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "provider": {
            "type": [
              "string",
              "null"
            ]
          },
          "usedBy": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "serviceModel": {
      "type": "object"
    }
  }
}
