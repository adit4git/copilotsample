{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Services & APIs Inventory",
  "type": "object",
  "properties": {
    "wcf": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service": {
            "type": "string"
          },
          "contract": {
            "type": [
              "string",
              "null"
            ]
          },
          "binding": {
            "type": [
              "string",
              "null"
            ]
          },
          "address": {
            "type": [
              "string",
              "null"
            ]
          },
          "methods": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "consumers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "service"
        ]
      }
    },
    "asmx": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service": {
            "type": "string"
          },
          "address": {
            "type": [
              "string",
              "null"
            ]
          },
          "methods": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "consumers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "service"
        ]
      }
    },
    "webApi": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "controller": {
            "type": "string"
          },
          "routes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "httpMethods": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "controller"
        ]
      }
    },
    "externalApis": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": [
              "string",
              "null"
            ]
          },
          "baseUrl": {
            "type": "string"
          },
          "endpoints": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "calledFrom": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "client": {
            "type": "string",
            "description": "HttpClient, WebRequest, jQuery.ajax, AngularJS $http, etc."
          }
        },
        "required": [
          "baseUrl",
          "client"
        ]
      }
    }
  }
}